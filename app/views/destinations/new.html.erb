<h1>New Destination</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <%= err %>
    <% end %>
<% end %>


<%= form_for @destination do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :country %>
  <%= f.text_field :country %>

<%= f.submit %>

<% end %>